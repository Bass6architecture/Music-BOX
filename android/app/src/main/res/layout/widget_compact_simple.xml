<?xml version="1.0" encoding="utf-8"?>
<!-- Music Box Compact Widget (4x1) - Clean Glassmorphism Style -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root_compact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <!-- Main container with glassmorphism background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_glassmorphism_bg"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Album Art with rounded corners -->
        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp">
            
            <ImageView
                android:id="@+id/album_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_widget_music_default"
                android:background="@drawable/widget_artwork_rounded"
                android:clipToOutline="true"
                android:contentDescription="Album artwork"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <!-- Song Info (Title + Artist) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Music Box"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textColor="#99FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Previous -->
            <ImageView
                android:id="@+id/btn_previous"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_widget_previous"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/widget_btn_circle"
                android:contentDescription="Previous track"
                tools:ignore="ContentDescription" />

            <!-- Play/Pause (larger) -->
            <ImageView
                android:id="@+id/btn_play_pause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_widget_play_modern"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/widget_btn_play"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:contentDescription="Play or Pause"
                tools:ignore="ContentDescription" />

            <!-- Next -->
            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_widget_next"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:background="@drawable/widget_btn_circle"
                android:contentDescription="Next track"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>

    <!-- Hidden bg_overlay for compatibility (Kotlin code references it) -->
    <ImageView
        android:id="@+id/bg_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</FrameLayout>
