<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_simple">

    <ImageView
        android:id="@+id/bg_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_widget_music_default"
        android:alpha="0.25" />

    <ImageView
        android:id="@+id/bg_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_top_to_bottom_scrim" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/album_art"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_widget_music_default"
            android:scaleType="centerCrop"
            android:background="@drawable/artwork_rounded_background"
            android:contentDescription="Pochette d'album" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="#E0E0E0"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_previous"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_widget_previous"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:background="@drawable/bg_button_circle_ripple"
            android:contentDescription="Piste précédente" />

        <ImageView
            android:id="@+id/btn_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_widget_pause_modern"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:background="@drawable/bg_button_circle_ripple"
            android:contentDescription="Lecture / Pause"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_widget_next"
            android:tint="#FFFFFF"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:background="@drawable/bg_button_circle_ripple"
            android:contentDescription="Piste suivante" />
    </LinearLayout>
</FrameLayout>
