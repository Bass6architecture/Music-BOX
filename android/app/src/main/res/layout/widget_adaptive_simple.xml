<?xml version="1.0" encoding="utf-8"?>
<!-- Music Box Adaptive Widget (4x2) - Clean Glassmorphism Style -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root_adaptive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <!-- Main container with glassmorphism background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_glassmorphism_bg"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <!-- Album Art (larger for 4x2) -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp">
            
            <ImageView
                android:id="@+id/album_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_widget_music_default"
                android:background="@drawable/widget_artwork_rounded"
                android:clipToOutline="true"
                android:contentDescription="Album artwork"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <!-- Right side content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="14dp"
            android:gravity="center_vertical">

            <!-- Song Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Title + Artist -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/song_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Music Box"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/artist_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Artist"
                        android:textColor="#99FFFFFF"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Favorite button -->
                <ImageView
                    android:id="@+id/btn_favorite"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_widget_heart_outline"
                    android:scaleType="centerInside"
                    android:padding="6dp"
                    android:background="@drawable/widget_btn_circle"
                    android:contentDescription="Toggle favorite"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <!-- Time display -->
            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00 / 0:00"
                android:textColor="#66FFFFFF"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="6dp" />

            <!-- Control Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <!-- Shuffle -->
                <ImageView
                    android:id="@+id/btn_shuffle"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_widget_shuffle_off"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:background="@drawable/widget_btn_circle"
                    android:contentDescription="Toggle shuffle"
                    tools:ignore="ContentDescription" />

                <!-- Previous -->
                <ImageView
                    android:id="@+id/btn_previous"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_widget_previous"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:background="@drawable/widget_btn_circle"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Previous track"
                    tools:ignore="ContentDescription" />

                <!-- Play/Pause (largest) -->
                <ImageView
                    android:id="@+id/btn_play_pause"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_widget_play_modern"
                    android:scaleType="centerInside"
                    android:padding="12dp"
                    android:background="@drawable/widget_btn_play"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="Play or Pause"
                    tools:ignore="ContentDescription" />

                <!-- Next -->
                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_widget_next"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:background="@drawable/widget_btn_circle"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Next track"
                    tools:ignore="ContentDescription" />

                <!-- Repeat -->
                <ImageView
                    android:id="@+id/btn_repeat"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_widget_repeat_off"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:background="@drawable/widget_btn_circle"
                    android:contentDescription="Toggle repeat"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Hidden bg_overlay for compatibility -->
    <ImageView
        android:id="@+id/bg_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Hidden progress bar for compatibility -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</FrameLayout>
