<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_glass">

    <!-- Background album art overlay (preview uses default art) -->
    <ImageView
        android:id="@+id/bg_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_widget_music_default"
        android:alpha="0.25" />

    <!-- Gradient scrim for readability -->
    <ImageView
        android:id="@+id/bg_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_top_to_bottom_scrim" />

    <!-- Foreground content -->
    <LinearLayout
        android:id="@+id/content_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Album Art -->
        <ImageView
            android:id="@+id/album_art"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_widget_music_default"
            android:scaleType="centerCrop"
            android:background="@drawable/artwork_rounded_12"
            android:contentDescription="Pochette d'album" />

        <!-- Middle Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="#E0E0E0"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <!-- Progress + time -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:progressDrawable="@drawable/progress_round"
                android:max="100"
                android:progress="60" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2:34 / 3:20"
                android:textColor="#E0E0E0"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:gravity="end"
                android:layout_marginTop="4dp" />

            <!-- Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="start">

                <ImageView
                    android:id="@+id/btn_previous"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_widget_previous"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="12dp"
                    android:background="@drawable/bg_button_circle_ripple"
                    android:contentDescription="Piste précédente" />

                <ImageView
                    android:id="@+id/btn_play_pause"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_widget_pause_modern"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="12dp"
                    android:background="@drawable/bg_button_circle_ripple"
                    android:contentDescription="Lecture / Pause"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_widget_next"
                    android:tint="#FFFFFF"
                    android:scaleType="centerInside"
                    android:padding="12dp"
                    android:background="@drawable/bg_button_circle_ripple"
                    android:contentDescription="Piste suivante" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/btn_favorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_widget_heart_filled"
                android:tint="#FF1744"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:background="@drawable/bg_button_circle_ripple"
                android:contentDescription="Favori" />

            <ImageView
                android:id="@+id/btn_shuffle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_widget_shuffle_on"
                android:tint="#FFFFFF"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_button_circle_ripple"
                android:contentDescription="Lecture aléatoire" />

            <ImageView
                android:id="@+id/btn_repeat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_widget_repeat_one"
                android:tint="#FFFFFF"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_button_circle_ripple"
                android:contentDescription="Répétition" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
