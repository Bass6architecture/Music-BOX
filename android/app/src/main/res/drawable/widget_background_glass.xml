<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="135"
                android:startColor="#20000000"
                android:centerColor="#30000000"
                android:endColor="#40000000"
                android:type="linear" />
            <padding
                android:bottom="2dp"
                android:right="2dp" />
        </shape>
    </item>
    
    <!-- Main glass background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient
                android:angle="135"
                android:startColor="#88050510"
                android:centerColor="#99030818"
                android:endColor="#88020D20"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
        </shape>
    </item>
    
    <!-- Glass overlay effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient
                android:angle="45"
                android:startColor="#15FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
