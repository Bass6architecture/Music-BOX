<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <gradient
                android:angle="270"
                android:startColor="#40000000"
                android:endColor="#00000000"
                android:type="radial"
                android:gradientRadius="100%" />
            <padding android:bottom="4dp" android:right="4dp" />
        </shape>
    </item>
    
    <!-- Background blur effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <solid android:color="#B3000000" />
        </shape>
    </item>
    
    <!-- Glass effect layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <gradient
                android:angle="135"
                android:startColor="#4D6750A4"
                android:centerColor="#336750A4"
                android:endColor="#1A6750A4"
                android:type="linear" />
            <stroke
                android:width="1.5dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <!-- Inner light reflection -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="40dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="26dp" android:topRightRadius="26dp" />
            <gradient
                android:angle="270"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
